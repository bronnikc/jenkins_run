pipeline {
    agent any
    parameters
			{
			  string(name: 'ORACLE_HOME', defaultValue: 'db_home1', description: 'The target Oracle_HOME')
			}
	stages{
		stage('Read Jenkinsfile') 
        {
            steps {
                    script {
                     env.RESP1 = input message: '<message>', parameters: [string(defaultValue: '', description: 'Enter response 1',name: 'RESPONSE1')]
                           }
                  }  
                  
        }
        stage('Show d')
        {
            steps
            {
                echo "${env.RESP1}"
            }
        }
    }
}
